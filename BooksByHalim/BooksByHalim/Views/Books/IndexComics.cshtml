@model IEnumerable<BooksByHalim.Models.Book>

@{
    ViewData["Title"] = "Index";
}


<div style="display:inline-block; width:100%">

    <form method="get" asp-controller="Books" asp-action="FindMethodComics">
        <input type="text" name="searchTerm" />
        <input class="btn btn-primary" type="submit" value="Search" />
    </form>
</div>


@foreach (var item in Model)
{
    <div class="mycontainer" style="border-top:solid 2px black; border-bottom:solid 2px black">
        <div class="left_side">
            <img src="@Url.Content(item.ImagePath)" height="300" width="180" alt="IMAGE" />
        </div>

        <div class="center_side">
            <table class="table table-hover">
                <tbody>
                    <tr>
                        <td colspan="3">@Html.DisplayFor(modelItem => item.Name)</td>
                    </tr>
                    <tr>
                        <td colspan="3">@Html.DisplayFor(modelItem => item.ReleaseDate.Date)</td>
                    </tr>
                    <tr>
                        <td colspan="3">@Html.DisplayFor(modelItem => item.Description)</td>
                    </tr>
                    <tr>
                        <td colspan="3">@Html.DisplayFor(modelItem => item.Actors)</td>
                        <td></td>
                    </tr>
                </tbody>
            </table>
        </div>

        <div class="right_side">
            <h3> Rating: </h3>
            <h2> @Html.DisplayFor(modelItem => item.Rating)</h2>
            <a class="btn btn-info" asp-controller="Books" asp-action="RateBook" asp-route-bookName="@item.Name">Rate book</a>
        </div>
    </div>
}